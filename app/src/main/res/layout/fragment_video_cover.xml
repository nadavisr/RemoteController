<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="26sp" />
    </LinearLayout>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.example.admin.myapplication.driveControl.joysticks.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystick_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|end"
        custom:auto_recenter_button="true"
        custom:background_alpha="150"
        custom:background_border_width="4dp"
        custom:background_color="#3000"
        custom:button_alpha="150"
        custom:button_color="#800000"
        custom:fixed_center="false" />

    <!--<com.example.admin.myapplication.driveControl.joysticks.DoubleJoystickView-->
        <!--android:id="@+id/joystick_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:layout_margin="2dp"/>-->

    <include layout="@layout/layout_views" />


    </FrameLayout>

</RelativeLayout>